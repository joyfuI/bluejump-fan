{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/src/routeTree.gen.ts"]
  },
  "vcs": { "enabled": true, "clientKind": "git", "useIgnoreFile": true },
  "formatter": {
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80,
    "attributePosition": "auto",
    "bracketSpacing": true,
    "expand": "never",
    "useEditorconfig": true
  },
  "linter": {
    "enabled": true,
    "domains": { "react": "all" },
    "rules": {
      "recommended": true,
      "style": { "useComponentExportOnlyModules": "off" }
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":PACKAGE:",
              ":BLANK_LINE:",
              ":ALIAS:",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        },
        "useSortedAttributes": "on",
        "useSortedProperties": "on"
      }
    }
  },
  "javascript": {
    "jsxRuntime": "transparent",
    "formatter": {
      "enabled": true,
      "quoteStyle": "single",
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "always",
      "bracketSameLine": false
    },
    "linter": { "enabled": true },
    "assist": { "enabled": true }
  },
  "json": {
    "formatter": { "enabled": true },
    "linter": { "enabled": true },
    "assist": { "enabled": true }
  },
  "css": {
    "parser": { "cssModules": true, "tailwindDirectives": true },
    "formatter": { "enabled": true, "quoteStyle": "single" },
    "linter": { "enabled": true },
    "assist": { "enabled": true }
  },
  "html": {
    "experimentalFullSupportEnabled": true,
    "formatter": { "enabled": true },
    "linter": { "enabled": true }
  }
}
